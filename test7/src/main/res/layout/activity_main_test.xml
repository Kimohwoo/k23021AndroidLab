<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainTest">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ch7_Layout"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@color/mainColor"
        android:backgroundTint="@color/mainColor"
        android:padding="5sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:text="+연락처에 추가"
        android:textSize="15sp"
        android:textColor="#4CAF50"
        android:layout_margin="10sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:gravity="center|bottom"
        android:text="02-120"
        android:textSize="35sp" />
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="3"
        android:layout_gravity="center"
        >
        <Button android:text="1" android:backgroundTint="@color/white" android:textColor="@color/black" android:textSize="20sp"/>
        <Button android:text="2" android:backgroundTint="@color/white" android:textColor="@color/black" android:textSize="20sp"/>
        <Button android:text="3" android:backgroundTint="@color/white" android:textColor="@color/black" android:textSize="20sp"/>
        <Button android:text="4" android:backgroundTint="@color/white" android:textColor="@color/black" android:textSize="20sp"/>
        <Button android:text="5" android:backgroundTint="@color/white" android:textColor="@color/black" android:textSize="20sp"/>
        <Button android:text="6" android:backgroundTint="@color/white" android:textColor="@color/black" android:textSize="20sp"/>
        <Button android:text="7" android:backgroundTint="@color/white" android:textColor="@color/black" android:textSize="20sp"/>
        <Button android:text="8" android:backgroundTint="@color/white" android:textColor="@color/black" android:textSize="20sp"/>
        <Button android:text="9" android:backgroundTint="@color/white" android:textColor="@color/black" android:textSize="20sp"/>
        <Button android:text="*" android:backgroundTint="@color/white" android:textColor="@color/black" android:textSize="20sp"/>
        <Button android:text="0" android:backgroundTint="@color/white" android:textColor="@color/black" android:textSize="20sp"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:backgroundTint="@color/white" android:text="#" android:textColor="@color/black" android:textSize="20sp" />
        <ImageView android:src="@drawable/video" android:layout_height="30dp" android:layout_width="30dp" android:layout_gravity="center|right"/>
        <ImageView android:src="@drawable/call" android:layout_height="40dp" android:layout_width="40dp" android:layout_gravity="center"/>
        <ImageView android:src="@drawable/back" android:layout_height="40dp" android:layout_width="40dp" android:layout_gravity="center|left"/>
    </GridLayout>

</LinearLayout>